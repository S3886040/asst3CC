<!DOCTYPE html>

<%- include('../views/navbar', {userName: user.user_name}); %>

<html>
  <%- include('../views/head'); %>
  <body>
    <section class="section container">
         <p class="error"><%= typeof error != 'undefined' ? error : '' %></p>             
             <% if(typeof friends != 'undefined') { %>
                 <% let count = 0 %>
                 <% friends.forEach(friend => { %>
                        <div class="card">
                            <div class="card-body">                  
                                <p class="card-text"><%= friend.userName %></p>  
                                <img src=<%= friend.url %> alt="friend" class="messageImg img-fluid" />
                            <form  method="post" id="subscribeForm" action="/unFriend">     
                                <input type="hidden" value="<%= count %>" name="index" id="unFriend" >
                                <input type="submit" class="btn btn-secondary" value="UnFriend" >
                            </form>
                            <% count++ %>
                            </div>       
                        </div>
                 <% });%>
            <% }%>
    </section>
    <script src="public/../script.js"></script>
  </body>
</html>